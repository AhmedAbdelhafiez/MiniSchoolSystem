<h1>New Assignment</h1>
<%= form_with(url: assignments_create_path, model: @assignment, local: true) do |f| %>
  <table>
    <tr>
      <th><%= f.label :name %></th>
      <td>:</td>
      <td><%= f.text_field :name%></td>
    </tr>

    <tr>
      <th><%= f.label :Student %></th>
      <td>:</td>
      <td>
        <%= f.select "student_id", options_from_collection_for_select(@students, "id", "username")
        %>

      </td>
    </tr>
    <tr>
      <th><%= f.hidden_field :course_id %></td>
        <td></td>
      <td><%= f.submit "Create"%></td>
    </tr>
  </table>

<% end %>
