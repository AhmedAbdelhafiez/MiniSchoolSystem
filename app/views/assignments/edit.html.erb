<h1>Edit Assignment</h1>
<%= form_with(url: assignments_edit_path, model: @assignment, local: true) do |f| %>
  <table>
    <tr>
      <th><%= f.label :name %></th>
      <td>:</td>
      <td><%= f.text_field :name%></td>
    </tr>
    <tr>
      <th><%= f.label :Student %></th>
      <td>:</td>
      <td>
        <%= f.select "student_id" , options_from_collection_for_select(@students, "id", "username", @assignment.student_id)
        %>

      </td>
    </tr>
    <tr>
      <th><%= f.hidden_field :id %></td>
        <td></td>
      <td><%= f.submit "Update"%></td>
    </tr>
  </table>

<% end %>
